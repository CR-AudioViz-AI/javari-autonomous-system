{
  "version": 2,
  "name": "javari-autonomous-system",
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "crons": [
    {
      "path": "/api/scrape/devdocs",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/scrape/mdn",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/scrape/fcc",
      "schedule": "0 4 * * *"
    },
    {
      "path": "/api/scrape/news",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/health/check",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/health/self-heal",
      "schedule": "0 0,12 * * *"
    },
    {
      "path": "/api/learning/process-queue",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/reports/daily",
      "schedule": "0 6 * * *"
    }
  ]
}
